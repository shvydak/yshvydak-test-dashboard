{
    "name": "yshvydak-test-dashboard",
    "version": "1.0.0",
    "description": "Modern, full-stack dashboard for Playwright tests with rerun capabilities. Built with React, TypeScript, Express, and SQLite.",
    "homepage": "https://github.com/yshvydak/yshvydak-test-dashboard#readme",
    "repository": {
        "type": "git",
        "url": "https://github.com/yshvydak/yshvydak-test-dashboard.git"
    },
    "bugs": {
        "url": "https://github.com/yshvydak/yshvydak-test-dashboard/issues"
    },
    "main": "packages/core/dist/index.js",
    "types": "packages/core/dist/index.d.ts",
    "directories": {
        "doc": "docs",
        "example": "examples"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=10.0.0"
    },
    "scripts": {
        "build": "turbo build",
        "dev": "turbo dev",
        "dev:prod": "NODE_ENV=production turbo dev",
        "start:prod": "NODE_ENV=production npm run build && pm2 start ecosystem.config.js",
        "stop:prod": "pm2 stop ecosystem.config.js",
        "delete:prod": "pm2 delete ecosystem.config.js",
        "restart:prod": "pm2 restart ecosystem.config.js",
        "reload:prod": "pm2 reload ecosystem.config.js",
        "auto:prod": "npm run build && pm2 delete ecosystem.config.js 2>/dev/null || true && NODE_ENV=production pm2 start ecosystem.config.js && pm2 save",
        "deploy:prod": "git pull && npm install && npm run auto:prod",
        "logs:prod": "pm2 logs",
        "status:prod": "pm2 status",
        "test": "npx vitest run",
        "test:watch": "npx vitest",
        "test:ui": "npx vitest --ui",
        "test:coverage": "npx vitest run --coverage",
        "type-check": "turbo type-check",
        "lint": "turbo lint",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "clean": "turbo clean && rm -rf node_modules/.turbo",
        "clear-data": "node scripts/clear-data.js",
        "trigger-tests": "node scripts/trigger-test-run.js",
        "trigger-tests:wait": "node scripts/trigger-test-run.js --wait",
        "trigger-tests:silent": "node scripts/trigger-test-run.js --wait --silent",
        "changeset": "npx @changesets/cli@latest",
        "changeset:status": "npx @changesets/cli@latest status --verbose",
        "version": "npx @changesets/cli@latest version",
        "release:reporter": "cd packages/reporter && npm publish",
        "prepare": "husky || true"
    },
    "keywords": [
        "playwright",
        "testing",
        "dashboard",
        "rerun",
        "qa",
        "automation",
        "react",
        "typescript",
        "express",
        "sqlite",
        "websocket",
        "monorepo",
        "turborepo",
        "tailwind",
        "vite",
        "test-runner",
        "ui-testing",
        "e2e-testing"
    ],
    "author": "Yurii Shvydak <y.shvydak@gmail.com>",
    "license": "MIT",
    "packageManager": "npm@10.0.0",
    "devDependencies": {
        "@changesets/changelog-github": "^0.5.1",
        "@changesets/cli": "^2.29.7",
        "@eslint/js": "^9.38.0",
        "@types/node": "^20.0.0",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "eslint": "^9.38.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-unused-imports": "^4.2.0",
        "globals": "^16.4.0",
        "husky": "^9.1.7",
        "prettier": "^3.6.2",
        "turbo": "^2.5.8",
        "typescript": "^5.9.3",
        "vite": "^6.4.1",
        "vitest": "^3.2.4"
    },
    "workspaces": [
        "packages/*"
    ],
    "overrides": {
        "source-map": "^0.7.4"
    }
}

# Server Configuration
PORT=3001
NODE_ENV=development

# Test Project Integration
PLAYWRIGHT_PROJECT_DIR=/path/to/your/playwright/project

# Reporter Configuration
USE_NPM_REPORTER=false

# Base URL Configuration (single source of truth)
BASE_URL=http://localhost:3001

# API Configuration (derived from BASE_URL)
DASHBOARD_API_URL=${BASE_URL}

# Storage Configuration
OUTPUT_DIR=test-results

# Web Application Configuration (Vite prefix required)
VITE_API_BASE_URL=${BASE_URL}/api
VITE_WEBSOCKET_URL=ws://localhost:${PORT}/ws
VITE_SERVER_URL=${BASE_URL}
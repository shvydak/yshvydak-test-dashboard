{
     "compilerOptions": {
          "target": "ES2020",
          "module": "ESNext",
          "moduleResolution": "bundler",
          "strict": true,
          "esModuleInterop": true,
          "skipLibCheck": true,
          "forceConsistentCasingInFileNames": true,
          "declaration": true,
          "outDir": "./dist",
          "composite": true,
          "resolveJsonModule": true,
          "allowSyntheticDefaultImports": true
     },
     "references": [{"path": "./packages/core"}, {"path": "./packages/server"}]
}
